<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.ListView?>
<Pane fx:controller="com.example.todolist.Controller.MainController" stylesheets="@../css/root.css"
      xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <Button layoutX="14.0" layoutY="14.0" mnemonicParsing="false" text="Add task" onAction="#handleAddTask"/>
   <Button layoutX="118.0" layoutY="14.0" mnemonicParsing="false" text="Remove task" onAction="#handleRemoveTask"/>
   <Button layoutX="247.0" layoutY="14.0" mnemonicParsing="false" text="Edit task" onAction="#handleRenameTask"/>
   <Button layoutX="350.0" layoutY="14.0" mnemonicParsing="false" text="Change status" onAction="#handleChangeStatus"/>
   <Button layoutX="486.0" layoutY="14.0" mnemonicParsing="false" text="Change priority" onAction="#handleChangePriority"/>
   <Button layoutX="631.0" layoutY="14.0" mnemonicParsing="false" text="Filter" onAction="#handleFilterByPriority"/>
   <Button layoutX="710.0" layoutY="14.0" mnemonicParsing="false" text="Swap" onAction="#handleSwapTasks"/>

   <VBox fx:id="taskVBox" layoutX="12.0" layoutY="68.0" prefHeight="533.0" prefWidth="381.0">
      <ListView fx:id="taskListView" prefHeight="533.0" prefWidth="381.0"/>
   </VBox>
</Pane>
